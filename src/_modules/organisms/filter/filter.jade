include ../../atoms/select/select
include ../../atoms/button/button
include ../../molecules/range-tabs/range-tabs

mixin filter(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''

  div.o-filter(class=spec.__class)&attributes(attributes)
    .container
      form.o-filter__form
        .o-filter__row
          .o-filter__col
            +select({ '__class': 'asd', id: 'select-1', name: 'action', items: [
                { name: 'Купити', val: 'buy'},
                { name: 'Оренда', val: 'rent'}
              ]})
          .o-filter__col
            +select({ '__class': 'js-select-type', id: 'select-2', name: 'type', items: [
                { name: 'Квартира', val: 'flat'},
                { name: 'Комерція', val: 'commerce'},
                { name: 'Будинок', val: 'house'},
                { name: 'Земельна ділянка', val: 'property'}
              ]})
          .o-filter__col
            +select({ id: 'select-3', name: 'region', items: [
                { name: 'Всі райони', val: 'all'},
                { name: 'Бам', val: 'bam'},
                { name: 'Каскад', val: 'cascade'},
                { name: 'Пасічна', val: 'pasichna'},
                { name: 'Центр', val: 'center'},
                { name: 'Майзлі', val: 'maizli'}
              ]})
          .o-filter__col.o-filter__col--realty
            +select({ id: 'select-4', name: 'realty', items: [
                { name: 'Новобудова', val: 'new'},
                { name: 'Вторинний ринок', val: 'second'}
              ]})
        .o-filter__row
          .o-filter__col.o-filter__col--state
            +select({ id: 'select-5', name: 'state', items: [
                { name: 'Тип нерухомості', val: 'all'},
                { name: 'З ремонтом', val: 'z-remontom'},
                { name: 'Сирець', val: 'syrets'}
              ]})
          .o-filter__col
            +range-tabs({ '__class': 'js-customization', tabs: [
              { id: '1', name: 'Площа', active: true, rangeOptions: { 
                  name: 'squere',
                  min: 100,
                  max: 200,
                  from: 100,
                  to: 200,
                  symbol: 'м2'
                }
              },
              { id: '2', name: 'Кімнати', rangeOptions: { 
                  name: 'rooms',
                  min: 1,
                  max: 4,
                  from: 1,
                  to: 4,
                  symbol: ''
                }
              },
              { id: '3', name: 'Поверх', rangeOptions: { 
                  name: 'floor',
                  min: 1,
                  max: 12,
                  from: 1,
                  to: 12,
                  symbol: ''
                }
              }
            ]})
          .o-filter__col
            +range-tabs({tabs: [
              { id: '4', name: 'UAH', active: true, rangeOptions: {
                  rootClass: 'js-filter-currency',
                  name: 'uah',
                  min: 1000,
                  max: 2000,
                  from: 1000,
                  to: 1200,
                  symbol: 'грн.'
                },
              },
              { id: '5', name: 'USD', rangeOptions: { 
                  rootClass: 'js-filter-currency',
                  name: 'usd',
                  min: 100,
                  max: 200,
                  from: 100,
                  to: 200,
                  symbol: '$'
                },
              },
            ]})
          .o-filter__col
            +button({ text: 'Шукати' })